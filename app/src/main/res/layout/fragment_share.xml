<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imgRightFlower"
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/one_twentyfive_dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:rotation="180"
        android:src="@drawable/ic_flower_orange"
        android:tint="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imgLeftFlower"
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/one_twentyfive_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:src="@drawable/ic_flower_orange"
        android:tint="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imgCenterFlower"
        android:layout_width="@dimen/onehundred_seventy_dp"
        android:layout_height="@dimen/onehundred_seventy_dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_flower"
        android:tint="@color/colorPrimaryDark" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linInnerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.devotted.utils.views.CustomTextView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five_dp"
                    android:drawablePadding="@dimen/five_dp"
                    android:drawableTop="@drawable/ic_spiritual_coloured"
                    android:gravity="center"
                    android:padding="@dimen/five_dp"
                    android:text="@string/spiritual"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/eighteen_sp" />

                <com.devotted.utils.views.CustomTextView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five_dp"
                    android:drawablePadding="@dimen/five_dp"
                    android:drawableTop="@drawable/ic_religious_orange"
                    android:gravity="center"
                    android:padding="@dimen/five_dp"
                    android:text="@string/religious"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/eighteen_sp" />

                <com.devotted.utils.views.CustomTextView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five_dp"
                    android:drawablePadding="@dimen/five_dp"
                    android:drawableTop="@drawable/ic_wellness_coloured"
                    android:gravity="center"
                    android:padding="@dimen/five_dp"
                    android:text="@string/wellness"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/eighteen_sp" />

            </LinearLayout>

            <com.devotted.utils.views.CustomTextView
                android:id="@+id/txtHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linInnerView"
                android:layout_marginEnd="@dimen/fifteen_dp"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="start"
                android:padding="@dimen/thirteen_dp"
                android:text="@string/share_text_1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/eighteen_sp" />

            <com.devotted.utils.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHeading1"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/fifteen_dp"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:gravity="start"
                android:padding="@dimen/thirteen_dp"
                android:text="@string/share_text_2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/eighteen_sp" />

            <LinearLayout
                android:id="@+id/linShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtOthers"
                android:gravity="center"
                android:padding="@dimen/ten_dp">

                <ImageView
                    android:id="@+id/imgWhatsapp"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:padding="@dimen/five_dp"
                    app:srcCompat="@drawable/ic_whatsapp" />

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:padding="@dimen/five_dp"
                    app:srcCompat="@drawable/ic_email" />

                <ImageView
                    android:id="@+id/imgTwitter"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:padding="@dimen/five_dp"
                    app:srcCompat="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/imgFb"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:padding="@dimen/five_dp"
                    app:srcCompat="@drawable/ic_fb" />

            </LinearLayout>

            <com.devotted.utils.views.CustomTextView
                android:id="@+id/txtOthers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/seven_dp"
                android:drawableStart="@drawable/ic_share"
                android:gravity="center"
                android:padding="@dimen/seven_dp"
                android:text="@string/others"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/eighteen_sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
