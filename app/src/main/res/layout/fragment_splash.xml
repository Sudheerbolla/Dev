<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_linear"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/seventy_dp"
        android:alpha="0.35"
        android:padding="@dimen/twentyfive_dp"
        android:src="@drawable/ic_flower" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/logo"
            layout="@layout/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linInnerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/ten_dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:src="@drawable/ic_spirtitual" />

                <com.devotted.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:text="@string/spiritual"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_sp"
                    android:visibility="visible"
                    app:txt_font_type="regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/ten_dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:src="@drawable/ic_religious" />

                <com.devotted.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:text="@string/religious"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_sp"
                    android:visibility="visible"
                    app:txt_font_type="regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingStart="@dimen/five_dp"
                android:paddingTop="@dimen/ten_dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:src="@drawable/ic_wellness" />

                <com.devotted.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:text="@string/wellness"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_sp"
                    app:txt_font_type="regular" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>