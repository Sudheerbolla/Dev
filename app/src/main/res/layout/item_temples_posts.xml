<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relBody"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp">

    <RelativeLayout
        android:id="@+id/relHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.devotted.utils.views.CircleImageView
            android:id="@+id/imageViewTemple"
            android:layout_width="@dimen/seventy_five_dp"
            android:layout_height="@dimen/seventy_five_dp"
            android:layout_marginBottom="@dimen/seven_dp"
            android:padding="@dimen/seven_dp"
            android:scaleType="centerCrop"
            android:src="@drawable/temple1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_toEndOf="@id/imageViewTemple"
            android:layout_toStartOf="@+id/imgMore"
            android:gravity="center"
            android:orientation="vertical">

            <com.devotted.utils.views.CustomTextView
                android:id="@+id/txtTempleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:padding="@dimen/five_dp"
                android:text="Sree Krishna Swamy Temple"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/seventeen_sp" />

            <com.devotted.utils.views.CustomTextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/six_dp"
                android:text="1 hr ago"
                android:textColor="@color/colorMediumGrey" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/seven_dp"
            app:srcCompat="@drawable/ic_more" />

    </RelativeLayout>

    <com.devotted.utils.views.CustomTextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:text="Lorem ipusum vyudb bhsd vyfgbhcdsj uvgwfg gywh Lorem ipusum vyudb bhsd vyfgbhcdsj uvgwfg gywh Lorem ipusum vyudb bhsd vyfgbhcdsj uvgwfg gywh Lorem ipusum vyudb bhsd vyfgbhcdsj uvgwfg gywh Lorem ipusum vyudb bhsd vyfgbhcdsj uvgwfg gywh "
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/fifteen_sp" />

    <com.devotted.utils.views.CustomTextView
        android:id="@+id/txtDescription1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/six_dp"
        android:layout_marginTop="@dimen/six_dp"
        android:padding="@dimen/five_dp"
        android:text="Pooja Time: 23 Feb 5:30 PM - 7:30 PM"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/seventeen_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/seven_dp">

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/seven_dp"
            android:drawableStart="@drawable/ic_heart_black"
            android:gravity="center"
            android:padding="@dimen/four_dp"
            android:text="45 Likes"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:drawablePadding="@dimen/seven_dp"
            android:drawableStart="@drawable/ic_comment"
            android:gravity="center"
            android:padding="@dimen/four_dp"
            android:text="12 Comments"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/seven_dp">

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:drawablePadding="@dimen/six_dp"
            android:drawableStart="@drawable/ic_heart_black"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:singleLine="true"
            android:text="Like"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:drawablePadding="@dimen/six_dp"
            android:drawableStart="@drawable/ic_comment"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:singleLine="true"
            android:text="Comment"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:drawablePadding="@dimen/six_dp"
            android:drawableStart="@drawable/ic_share"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:singleLine="true"
            android:text="Share"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/colorGrey" />

</LinearLayout>
