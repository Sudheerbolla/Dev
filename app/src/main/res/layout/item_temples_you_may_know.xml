<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relBody"
    android:layout_width="@dimen/one_forty_dp"
    android:layout_height="@dimen/onehundred_seventy_dp"
    android:layout_margin="@dimen/three_dp"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/seven_dp">

    <com.devotted.utils.views.CircleImageView
        android:id="@+id/imageViewTemple"
        android:layout_width="@dimen/seventy_five_dp"
        android:layout_height="@dimen/seventy_five_dp"
        android:padding="@dimen/two_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/temple1"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="@dimen/one_dp" />

    <com.devotted.utils.views.CustomTextView
        android:id="@+id/txtUpdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-11dp"
        android:background="@drawable/gradient_horizontal"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/five_dp"
        android:text="@string/_12_updates"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/thirteen_sp" />

    <com.devotted.utils.views.CustomTextView
        android:id="@+id/txtTempleName"
        android:layout_width="@dimen/one_thirty_dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="2"
        android:padding="@dimen/five_dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sixteen_sp" />

</LinearLayout>
