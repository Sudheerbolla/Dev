<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/twenty_dp"
    app:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="@dimen/seven_dp"
    card_view:cardElevation="@dimen/five_dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/twentytwo_dp">

            <com.devotted.utils.views.CustomTextView
                android:id="@+id/txtHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/how_do_you_belong_here"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/seventeen_sp"
                app:txt_font_type="bold" />

            <com.devotted.utils.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:text="@string/what_is_your_role"
                android:textAllCaps="true"
                android:textColor="@color/color_vvDarkGrey"
                android:textSize="@dimen/thirteen_sp"
                app:txt_font_type="light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center_vertical">

                <com.devotted.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:text="@string/i_am_a"
                    android:textColor="@color/color_vvvDarkGrey"
                    android:textSize="@dimen/sixteen_sp"
                    app:txt_font_type="light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five_dp"
                    android:background="@drawable/grey_border_curved"
                    android:padding="@dimen/three_dp">

                    <Spinner
                        android:id="@+id/spinnerIBelongHere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>

            </LinearLayout>

            <com.devotted.utils.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/people_who_are_already_linked_to_this_temple"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/thirteen_sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp">

                <com.devotted.utils.views.CircleImageView
                    android:id="@+id/imgProfilePic1"
                    android:layout_width="@dimen/fourty_four_dp"
                    android:layout_height="@dimen/fourty_four_dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/imgProfilePic1"
                    android:layout_toStartOf="@+id/txtReport1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/ten_dp">

                    <com.devotted.utils.views.CustomTextView
                        android:id="@+id/txtName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/rama_swamy"
                        android:textColor="@color/color_vvvDarkGrey"
                        android:textSize="@dimen/fifteen_sp" />

                    <com.devotted.utils.views.CustomTextView
                        android:id="@+id/txtDesignation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/pedda_pujari"
                        android:textColor="@color/color_vDarkGrey"
                        android:textSize="@dimen/thirteen_sp" />

                </LinearLayout>

                <com.devotted.utils.views.CustomTextView
                    android:id="@+id/txtReport1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/report"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/thirteen_sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp">

                <com.devotted.utils.views.CircleImageView
                    android:id="@+id/imgProfilePic2"
                    android:layout_width="@dimen/fourty_four_dp"
                    android:layout_height="@dimen/fourty_four_dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/imgProfilePic2"
                    android:layout_toStartOf="@+id/txtReport2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/ten_dp">

                    <com.devotted.utils.views.CustomTextView
                        android:id="@+id/txtName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/shivaji_reddy"
                        android:textColor="@color/color_vvvDarkGrey"
                        android:textSize="@dimen/fifteen_sp" />

                    <com.devotted.utils.views.CustomTextView
                        android:id="@+id/txtDesignation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/owner"
                        android:textColor="@color/color_vDarkGrey"
                        android:textSize="@dimen/thirteen_sp" />

                </LinearLayout>

                <com.devotted.utils.views.CustomTextView
                    android:id="@+id/txtReport2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/report"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/thirteen_sp" />

            </RelativeLayout>

        </LinearLayout>

        <com.devotted.utils.views.CustomTextView
            android:id="@+id/txtConfirm"
            style="@style/AppButtonStyle"
            android:layout_margin="0dp"
            android:background="@drawable/gradient_horizontal_plane"
            android:padding="@dimen/thirteen_dp"
            android:text="@string/confirm"
            android:textAllCaps="true" />

    </LinearLayout>

</android.support.v7.widget.CardView>